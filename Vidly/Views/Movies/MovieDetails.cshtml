@model Vidly.Models.Movie
@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Genre: @Model.GenreType.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate.ToString("dddd, dd MMMM yyyy")
    </li>
    <li>
        Date Added: @Model.DateAdded.ToString("dddd, dd MMMM yyyy")
    </li>
    <li>
        Stock nos.: @Model.Stock
    </li>


</ul>
