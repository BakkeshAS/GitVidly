@model  List<Vidly.Models.Customer>
@{
    ViewBag.Title = "AllCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Name, "Customers" + "/" + item.Id, "Customer")
            </li>
        }
    </ul>
}
else
{

    <h3>No Customers to show!</h3>
}

